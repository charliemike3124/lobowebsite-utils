{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "lobowebsites-utils": ["./node_modules/lobowebsites-utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
